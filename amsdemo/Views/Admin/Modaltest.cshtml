
@{
    ViewBag.Title = "Modaltest";
}
@section header{}
<h2>Modal test</h2>


<!-- Button trigger modal -->

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#myModal" data-backdrop="false">
                Launch demo modal
            </button>
            <button  data-toggle="modal1" class="btn-block" data-target="#myModal1" style="background-color:#16a085; cursor:pointer">
                <h4 style="color:#ffffff; text-align:center;"> NEXT &nbsp;<span class="glyphicon glyphicon-forward"></span> &nbsp; &nbsp; </h4>
            </button>
            <div class="modal" id="myModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content responsive">
                        <div class="modal-header" style="background-color:#0026ff; color:white;">
                            <h4 class="modal-title">Modal title</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>

                        </div>
                        <div class="modal-body" style="overflow: auto">
                            <form>
                                <table id="example" class="table table-striped table-hover responsive table-responsive">
                                    <thead>
                                        <tr style="background-color:#0094ff; color:#ecf0f1">
                                            <th>Employee ID</th>
                                            <th>Employee Name</th>
                                            <th>Department ID</th>
                                            <th>Department Name</th>
                                        </tr>
                                    </thead>

                                    <tfoot>
                                        <tr>
                                            <th>Employee ID</th>
                                            <th>Employee Name</th>
                                            <th>Department ID</th>
                                            <th>Department Name</th>
                                        </tr>
                                    </tfoot>

                                    
                                </table>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section scripts{
    
<script type="text/javascript">
      var Popup, dataTable;
    $(function () {
        $('#example').DataTable({
            pageLength: 5,
              "ajax": {
                "url": '/admin/GetEmployeeList',
                "type": "get",
                "datatype": "json"
            },
            "columns": [

                { "data": "EmployeeId", "authowidth": false },
                { "data": "EmployeeName", "authowidth": false },
                { "data": "DepartmentId", "authowidth": false },
                { "data": "DepartmentName", "authowidth": false }

            ]
        });

    });
</script>
}
