@model amsdemo.ViewModel.EmployeeUserVM



@using (Html.BeginForm("AssignrolesPartial", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<form class="form-horizontal" id="form-sample-1" novalidate="novalidate">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group row">
        @Html.LabelFor(model => model.UserId, "User Id", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @id = "getUserId", @class = "form-control", @name = "Id" } })
            @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            <button type="button" class="btn btn-primary btn-bitbucket" data-toggle="modal" data-target="#myModaluser" data-backdrop="false">
                Select User to Assign Role
            </button>
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.UserName, "User Name", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @id = "getUserName", @class = "form-control", @name = "name" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group row">
        @Html.LabelFor(model => model.Position, "Position", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @id = "getposition", @class = "form-control", @name = "Position" } })
            @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.DepartmentName, "Department Name", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @id = "getdepname", @class = "form-control", @name = "ConfirmPassword" } })
            @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group row">
        <div class="col-md-8">         
            @Html.DropDownListFor(model=>model.RoleId,(SelectList)ViewBag.getrolelist,"Select Role",new { @id = "getroleId", @class = "form-control select2_demo_2" })
       </div> 
    </div>


    <div class="form-group">
        <div class="col-md-10">
            <div class="check-list">
                <label class="ui-checkbox">
                    <input type="checkbox" value="1" name="getadmin" id="getadmin">
                    <span class="input-span"></span>Is Admin
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" id="btnAdd" />
        </div>
    </div>

</form>
}

<div class="container">
    <div class="row">
        <div class="col-xs-12">

            <div class="modal" id="myModaluser" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content responsive">
                        <div class="modal-header" style="background-color:#0026ff; color:white;">
                            <h4 class="modal-title">Select User to Assign Role </h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>

                        </div>
                        <div class="modal-body" style="overflow: auto">
                            <form>
                                <table id="usertable" class="table table-striped table-hover responsive table-responsive">
                                    <thead>
                                        <tr style="background-color:#0094ff; color:#ecf0f1">
                                            <th>User ID</th>
                                            <th>User Name</th>
                                            <th>Position</th>
                                            <th>Department Name</th>
                                        </tr>
                                    </thead>

                                    <tfoot>
                                        <tr>
                                            <th>User ID</th>
                                            <th>User Name</th>
                                            <th>Position</th>
                                            <th>Department Name</th>
                                        </tr>
                                    </tfoot>


                                </table>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-xs-12">

            <div class="modal" id="myModalrole" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content responsive">
                        <div class="modal-header" style="background-color:#0026ff; color:white;">
                            <h4 class="modal-title">Select Role</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>

                        </div>
                        <div class="modal-body" style="overflow: auto">
                            <form>
                                <table id="role" class="table table-striped table-hover responsive table-responsive">
                                    <thead>
                                        <tr style="background-color:#0094ff; color:#ecf0f1">
                                            <th>Role Id</th>
                                            <th>Role Name</th>
                                        </tr>
                                    </thead>

                                    <tfoot>
                                        <tr>
                                            <th>Role Id</th>
                                            <th>Role Name</th>
                                        </tr>
                                    </tfoot>


                                </table>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



